# Copy this file to 'defaults.sh' and set the defaults to your liking.
# These are used as fallbacks for options that are omitted in the scripts.

DEFAULT_BROKER='localhost:9192'
DEFAULT_TOPIC='send-sms'
DEFAULT_CLIENT='test'
DEFAULT_CORREL="C${RANDOM}$$"
DEFAULT_DEADLINE='2100-01-01T00:00:00Z'
DEFAULT_SENDER='TEST SENDER'
DEFAULT_RECIPIENT='255123456789'
DEFAULT_PUBFILE='lib/${CLIENT}.pub'

# --- NO EDITING BELOW THIS LINE ---

BROKER="${BROKER:-$DEFAULT_BROKER}"
TOPIC="${TOPIC:-$DEFAULT_TOPIC}"
CLIENT="${CLIENT:-$DEFAULT_CLIENT}"
CORREL="${CORREL:-$DEFAULT_CORREL}"
DEADLINE="${DEADLINE:-$DEFAULT_DEADLINE}"
SENDER="${SENDER:-$DEFAULT_SENDER}"
RECIPIENT="${RECIPIENT:-$DEFAULT_RECIPIENT}"
PUBFILE="${PUBFILE:-$(dirname "$(realpath "$0")")/lib/${CLIENT}.pub}"
